{
  "openapi": "3.0.2",
  "info": {
    "title": "Spring boot template",
    "version": "1.0"
  },
  "paths": {
    "/api/v1/healthcheck": {
      "get": {
        "operationId": "Healthcheck",
        "tags": [
          "healthcheck"
        ],
        "description": "Healthcheck endpoint",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/provider": {
      "post": {
        "operationId": "addProvider",
        "tags": [
          "provider"
        ],
        "description": "Insert provider",
        "parameters": [
          {
            "$ref" : "contentSchema/params/headers/accountIDParam.json"
          }
        ],
        "requestBody": {
          "description": "Provider to be added",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "APIspecs/requests/providerRequestModel.json"
              },
              "example" : {
                "name" : "Bob",
                "title" : "PROVIDER",
                "description" : "provider named Bob",
                "phoneNumber" : "1234567890"
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "responses/providerCreated.json"
          },
          "400": {
            "$ref": "responses/badRequest.json"
          },
          "409": {
            "$ref": "responses/conflict.json"
          }
        }
      },
      "get" : {
        "operationId": "getAllProviders",
        "tags": [
          "provider"
        ],
        "description": "Get all providers",
        "parameters": [
          {
            "$ref" : "contentSchema/params/headers/accountIDParam.json"
          },
          {
            "$ref" : "contentSchema/params/queryParams/pageQueryParam.json"
          },
          {
            "$ref" : "contentSchema/params/queryParams/pageSizeQueryParam.json"
          }
        ],
        "responses" : {
          "200" : {
            "$ref" : "responses/providerGetAllOK.json"
          },
          "400": {
            "$ref": "responses/badRequest.json"
          }
        }        
      }
    },
    "/api/v1/provider/{provider-id}/item": {
      "post": {
        "operationId": "addItem",
        "tags": [
          "item"
        ],
        "description" : "Add item",
        "parameters": [
          {
            "$ref" : "contentSchema/params/headers/accountIDParam.json"
          },
          {
            "$ref" : "contentSchema/params/pathParams/providerIDParam.json"
          }
        ],
        "requestBody": {
          "description": "Item to be added",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "APIspecs/requests/itemRequestModel.json"
              },
              "example" : {
                "title" : "item title",
                "description" : "item description",
                "priceCents" : 100
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "responses/itemCreated.json"
          },
          "400": {
            "$ref": "responses/badRequest.json"
          }
        }
      }
    },
    "/api/v1/provider/{provider-id}" : {
      "patch" : {
        "operationId": "patchProvider",
        "tags": [
          "provider"
        ],
        "description": "Update provider",
        "parameters": [
          {
            "$ref" : "contentSchema/params/headers/accountIDParam.json"
          },
          {
            "$ref" : "contentSchema/params/pathParams/providerIDParam.json"
          }
        ],
        "requestBody": {
          "description": "Provider to update",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "APIspecs/requests/providerUpdateRequestModel.json"
              },
              "example" : {
                "title" : "PROVIDER",
                "description" : "provider named Bob",
                "status" : "active",
                "phoneNumber" : "1234567890"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "responses/providerUpdated.json"
          },
          "400": {
            "$ref": "responses/badRequest.json"
          }
        }
      }
    },
    "/api/v1/provider/{provider-id}/item/{item-id}" : {
      "put": {
        "operationId": "updateItem",
        "tags" : [
          "item"
        ],
        "description" : "Update item",
        "parameters": [
          {
            "$ref" : "contentSchema/params/headers/accountIDParam.json"
          },
          {
            "$ref" : "contentSchema/params/pathParams/providerIDParam.json"
          },
          {
            "$ref" : "contentSchema/params/pathParams/itemIDParam.json"
          }
        ],
        "requestBody": {
          "description": "Item to be updated",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "APIspecs/requests/itemUpdateRequestModel.json"
              },
              "example" : {
                "example" : {
                  "title" : "PROVIDER",
                  "description" : "provider named Bob",
                  "priceCents" : 100,
                  "status" : "active"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "responses/itemUpdated.json"
          },
          "400": {
            "$ref": "responses/badRequest.json"
          }
        }
      },
      "get" : {
        "operationId": "getItemByID",
        "tags" : [
          "item"
        ],
        "description" : "Get item",
        "parameters": [
          {
            "$ref" : "contentSchema/params/headers/accountIDParam.json"
          },
          {
            "$ref" : "contentSchema/params/pathParams/providerIDParam.json"
          },
          {
            "$ref" : "contentSchema/params/pathParams/itemIDParam.json"
          }
        ],
        "responses": {
          "200": {
            "$ref": "responses/itemGetOK.json"
          },
          "404": {
            "$ref": "responses/notFound.json"
          }
        }        
      }
    }
  }
}